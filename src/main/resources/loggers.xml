<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=
               "http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="eventLogger" class="com.epam.core.after.injection.ConsoleEventLogger"/>
    <bean id="fileEventLogger" class="com.epam.core.after.injection.FileEventLogger" init-method="init"/>
    <bean id="cacheFileEventLogger" class="com.epam.core.after.injection.CacheFileEventLogger" init-method="init"
          destroy-method="destroy">
        <constructor-arg value="3"/>
    </bean>
</beans>